FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvConstraints;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

limitp
{
    type       limitPressure;

    min        1e3;
    max        6e6;
}

limitTgas
{
    type            limitTemperature;
    active          yes;
    selectionMode   all;
    min             200;
    max             700;
    phase           gas;
}

limitTparticles
{
    type            limitTemperature;
    active          yes;
    selectionMode   all;
    min             200;
    max             700;
    phase           particles;
}


